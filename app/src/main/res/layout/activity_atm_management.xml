<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AtmManagementActivity">

    <TextView
        android:id="@+id/atm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ATM"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/atm_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ATM LIST"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/atm_text"
        />

    <Button
        android:id="@+id/atm_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ATM ADD"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/atm_list"
        />

    <Button
        android:id="@+id/atm_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ATM MAPS"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/atm_add"
        />


</androidx.constraintlayout.widget.ConstraintLayout>